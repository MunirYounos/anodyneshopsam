{%- capture current -%}{%- cycle 1, 2, 3, 4, 5, 6 -%}{%- endcapture -%}
{%- assign collectionTitle = featured_collection.title | default: 'Collection title' -%}
<div class="collection-card text-center {{ grid_item_width }}" {{ block.shopify_attributes }}>
  <div class="collection-card__image overflow-hidden">
    <a class="hv-image-saturate" href="{{featured_collection.url | default :'#'}}">
      {%- if featured_image != blank -%}
      <img class="transition" src="{{ featured_image | img_url: '600x'}}">
      {%- elsif featured_collection.image != blank -%}
      <img class=" transition" src="{{ featured_collection.image | img_url: '600x'}}">
      {%- else -%}
      {{ 'collection-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
      {%- endif -%}
    </a>
  </div>
  <h3 class="collection-subtitle">
    <a class="collection-subtitle-a" href="{{featured_collection.url | default :'#'}}">
      {{ collectionTitle }}
    </a>
  </h3>
  <p class="collection-count">{{ featured_collection.products_count | default: 0 }} {{ featured_collection.products_count | pluralize: 'product', 'products' }}</p>
</div>